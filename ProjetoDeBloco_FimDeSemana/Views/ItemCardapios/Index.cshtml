@model IEnumerable<ProjetoDeBloco_FimDeSemana.Models.ItemCardapio>

@{
    ViewData["Title"] = "Itens dos Cardápios";
}

<h1>Lista de Itens</h1>

<p>
    <a asp-action="Create">Adicionar Novo Item</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th> Evento </th>
            <th> Nome do Item </th>
            <th> Quantidade </th>
            <th> Preço </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.Cardapio.Evento.Titulo) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>