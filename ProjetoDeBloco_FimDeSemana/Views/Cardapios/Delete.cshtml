@model ProjetoDeBloco_FimDeSemana.Models.Cardapio

@{
    ViewData["Title"] = "Remover Cardápio";
}

<h1>Deleta cardápio</h1>

<div>
    <h4>Cardapio</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Evento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Evento.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar aos cardápios</a>
    </form>
</div>
